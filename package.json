{
  "name": "tabular-json",
  "version": "1.0.0",
  "description": "Tabular-JSON: an extension of JSON adding compact a tabular data structure",
  "author": "Jos de Jong",
  "license": "ISC",
  "type": "module",
  "main": "lib/esm/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "types": "./lib/esm/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm-run-all build:**",
    "build:clean": "del-cli lib",
    "build:generate": "peggy --output ./src/grammers/generated/tabular-json-parser.js --format es ./src/grammers/tabular-json.pegjs --source-map",
    "build:esm": "tsc",
    "test": "npm run build:generate && vitest",
    "test:ci": "npm run build:generate && vitest run",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "benchmark": "node benchmark/index.js"
  },
  "devDependencies": {
    "@types/node": "20.12.4",
    "adm-zip": "0.5.12",
    "csv42": "5.0.0",
    "del-cli": "5.1.0",
    "npm-run-all": "4.1.5",
    "peggy": "4.0.2",
    "prettier": "3.2.5",
    "typescript": "5.4.3",
    "vitest": "1.4.0"
  }
}