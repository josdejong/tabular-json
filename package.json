{
  "name": "tabular-json",
  "version": "1.0.0",
  "description": "Tabular-JSON: a superset of JSON adding a support for CSV-like tables",
  "keywords": [
    "Tabular-JSON",
    "JSON",
    "CSV",
    "NDJSON",
    "data format"
  ],
  "author": "Jos de Jong",
  "license": "ISC",
  "type": "module",
  "main": "lib/esm/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "types": "./lib/esm/index.d.ts"
    }
  },
  "scripts": {
    "dev": "astro dev",
    "preview": "astro preview",
    "build": "npm-run-all build:**",
    "_build:clean": "del-cli lib",
    "build:generate": "peggy --output ./src/scripts/lib/grammers/generated/tabular-json-parser.js --format es ./src/scripts/lib/grammers/tabular-json.pegjs --source-map",
    "build:astro:check": "astro check",
    "build:astro:build": "astro build",
    "_build:lib": "tsc",
    "test": "npm run build:generate && vitest",
    "test:ci": "npm run build:generate && vitest run",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "benchmark": "node benchmark/index.js"
  },
  "devDependencies": {
    "@astrojs/check": "0.5.10",
    "@astrojs/svelte": "5.4.0",
    "@fortawesome/fontawesome-svg-core": "6.5.2",
    "@fortawesome/free-brands-svg-icons": "6.5.2",
    "@types/adm-zip": "0.5.5",
    "@types/git-diff": "2.0.7",
    "@types/node": "20.12.4",
    "adm-zip": "0.5.12",
    "astro": "4.6.1",
    "csv42": "5.0.0",
    "del-cli": "5.1.0",
    "fracturedjsonjs": "4.0.0",
    "git-diff": "2.0.6",
    "npm-run-all": "4.1.5",
    "peggy": "4.0.2",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "0.13.0",
    "prettier-plugin-svelte": "3.2.3",
    "sass": "1.75.0",
    "svelte": "4.2.14",
    "svelte-awesome": "3.3.1",
    "typescript": "5.4.5",
    "vitest": "1.4.0"
  }
}
