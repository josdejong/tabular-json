{
  "compilerOptions": {
    "outDir": "dist/esm",
    "moduleResolution": "bundler",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts"]
}
