---
import Menu from '../components/Menu.svelte'

interface Props {
  title: string
  description: string
  url: string
  className?: string
}

const { title, description, url, className } = Astro.props
---

<!doctype html>
<html lang="en" class={className}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="shortcut icon" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body>
    <Menu currentUrl={url} className={className} />
    <div class="contents">
      <main class="page">
        <slot />
      </main>
    </div>
  </body>
</html>
<style>
  :root {
    --theme-color: #1e90ff;
    --theme-color-highlight: #4ba5ff;
    --color: #4d4d4d;
    --font-family: system-ui, sans-serif;
    --font-size: 12pt;
    --mono-font-family:
      ui-monospace, SFMono-Regular, SF Mono, Menlo, Consolas, Liberation Mono, monospace;
    --mono-font-size: 14px;
    --mono-line-height: 16px;

    --border-color: #dcdcdc;
    --header-background-color: #f5f5f5;
    --header-color: #717171;
    --link-color: #ff4343;
    --link-color-highlight: #cf3939;
    --sub-menu-background: #e3e3e3;
    --code-background: #f5f5f5;
    --warning-color: #ffe08a;
    --margin: 10px;
    --main-width: 960px;
  }

  html {
    font-family: var(--font-family), sans-serif;
    font-size: var(--font-size);
    line-height: 1.5em;
    color: var(--color);
    width: 100%;
    height: 100%;
  }

  body {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;

    .contents {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: auto;
      align-items: center;
      box-sizing: border-box;
      scroll-behavior: smooth;

      main {
        width: 100%;
        max-width: var(--main-width);
        padding: var(--margin);
        padding-bottom: 10em;
        box-sizing: border-box;
      }
    }
  }

  html.playground {
    background: var(--sub-menu-background);

    .contents {
      main {
        flex: 1;
        width: 100%;
        max-width: none;
        padding: 0;
        display: flex;
      }
    }
  }

  :global(table) {
    border-collapse: collapse;

    th,
    td {
      border: 1px solid var(--border-color);
      padding: 5px;
      vertical-align: top;
      text-align: left;
    }

    th {
      background: var(--header-background-color);
      color: var(--header-color);
      font-weight: inherit;
      white-space: nowrap;
    }
  }

  :global(button) {
    font-family: inherit;
    font-size: inherit;
    cursor: pointer;
    background: #6a6a6a;
    color: white;
    border: none;
    border-radius: 3px;
    padding: 2px 6px;

    &:hover {
      background: #959595;
    }
  }

  :global(.action-button) {
    background: var(--theme-color);
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 3px;
    text-decoration: none;

    &:hover {
      background: var(--theme-color-highlight);
      color: white;
    }
  }

  :global(a) {
    color: var(--link-color);

    &:hover {
      color: var(--link-color-highlight);
    }
  }

  :global(h2) {
    margin: 2em 0 0.5em 0;
  }

  :global(h1 a, h2 a, h3 a, h4 a) {
    color: inherit;
    text-decoration: inherit;
    position: relative;

    &:hover {
      color: var(--link-color);

      &:before {
        position: absolute;
        bottom: 4px;
        left: -1em;
        content: '# ';
      }
    }
  }

  :global(p.warning) {
    background: var(--warning-color);
    border-radius: 3px;
    padding: 1em;
  }

  :global(pre) {
    font-family: var(--mono-font-family), monospace;
    font-size: var(--mono-font-size);
    line-height: var(--mono-line-height);
    background: var(--code-background);
    padding: 5px;
    overflow: auto;

    code {
      padding: 0;
    }
  }

  :global(code) {
    font-family: var(--mono-font-family), monospace;
    font-size: var(--mono-font-size);
    line-height: var(--mono-line-height);
    background: var(--code-background);
    padding: 2px;
  }
</style>
